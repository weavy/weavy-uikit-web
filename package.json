{
  "name": "@weavy/uikit-web",
  "version": "19.0.0",
  "author": "Weavy",
  "description": "Web components UI-kit for Weavy",
  "homepage": "https://github.com/weavy/weavy-uikit-web",
  "license": "MIT",
  "type": "module",
  "main": "dist/weavy.js",
  "module": "dist/weavy.esm.js",
  "types": "dist/types",
  "customElements": "dist/custom-elements.json",
  "scripts": {
    "start": "run-p auth serve",
    "prepack": "run-p clean",
    "prepare": "run-p build types docs api",
    "clean": "rimraf dist/**/* --glob",
    "prebuild": "run-p lint analyze localize",
    "build": "node dev/esbuild.mjs --mode=production",
    "watch": "node dev/esbuild.mjs --mode=development",
    "localize": "lit-localize build --config=dev/lit-localize.json",
    "serve": "node dev/dev-server.mjs",
    "auth": "node dev/auth-server.mjs",
    "translate": "lit-localize extract --config=dev/lit-localize.json",
    "api": "wca analyze src --format json --outFile dist/custom-elements.json",
    "docs": "wca analyze src --format markdown --outDir dist/docs",
    "lint": "eslint src",
    "types": "tsc --project dev/tsconfig.build.json",
    "analyze": "lit-analyzer",
    "test": "run-p watch test:watch",
    "pretest:build": "run-s build",
    "test:build": "web-test-runner --config dev/web-test-runner.config.mjs",
    "test:watch": "web-test-runner --config dev/web-test-runner.config.mjs --watch"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.11.0",
    "@codemirror/commands": "^6.3.0",
    "@codemirror/lang-markdown": "^6.2.2",
    "@codemirror/language": "^6.9.2",
    "@codemirror/language-data": "^6.3.1",
    "@codemirror/state": "^6.3.1",
    "@codemirror/view": "^6.22.0",
    "@lit/context": "^1.1.0",
    "@lit/localize": "^0.12.1",
    "@material/material-color-utilities": "^0.2.7",
    "@mdi/js": "^7.3.67",
    "@microsoft/signalr": "^7.0.14",
    "@popperjs/core": "^2.11.8",
    "@tanstack/query-core": "^5.8.6",
    "@tanstack/query-persist-client-core": "^5.8.6",
    "@tanstack/query-sync-storage-persister": "^5.8.6",
    "lit": "^3.1.0",
    "lit-modal-portal": "^0.4.1",
    "lodash.throttle": "^4.1.1",
    "pdfjs-dist": "^3.11.174"
  },
  "devDependencies": {
    "@lit/localize-tools": "^0.7.1",
    "@open-wc/testing": "^4.0.0",
    "@tanstack/eslint-plugin-query": "^5.8.4",
    "@tanstack/query-devtools": "^5.8.4",
    "@types/lodash.throttle": "^4.1.9",
    "@types/mocha": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@web/dev-server-esbuild": "^1.0.1",
    "@web/test-runner": "^0.18.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "esbuild": "^0.19.8",
    "esbuild-sass-plugin": "^2.16.0",
    "esbuild-server": "^0.3.0",
    "eslint": "^8.54.0",
    "eslint-plugin-lit": "^1.10.1",
    "eslint-plugin-lit-a11y": "^4.1.1",
    "eslint-plugin-wc": "^2.0.4",
    "express": "^4.18.2",
    "lit-analyzer": "^2.0.1",
    "node-fetch": "^3.3.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "ts-lit-plugin": "^2.0.1",
    "typescript": "^5.3.2",
    "web-component-analyzer": "^2.0.0"
  }
}
